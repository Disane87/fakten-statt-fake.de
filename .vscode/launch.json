{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "client: msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/app",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": [
        {
            "name": "fullstack: nuxt",
            "configurations": [
                "server: nuxt",
                "client: msedge"
            ]
        }
    ]
}